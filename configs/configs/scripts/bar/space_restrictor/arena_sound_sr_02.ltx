[logic]
active = sr_idle@wait_rupor_2

[sr_idle@wait_rupor_2]
on_info = {+arena_start_public} sr_idle@wait_2

[sr_idle@wait_2]
on_game_timer = 10 | sr_idle@play_arena_sound_2

[sr_idle@play_arena_sound_2]
on_game_timer = 10 | sr_idle@stop_arena_sound_2 %=play_sound(new_arena_public_2)%
on_info = {-arena_start_public} sr_idle@stop_2

[sr_idle@stop_arena_sound_2]
on_signal = sound_end | sr_idle@play_arena_sound_2
on_info = {-arena_start_public} sr_idle@stop_2

[sr_idle@stop_2]
on_game_timer = 50 | sr_idle@wait_2
