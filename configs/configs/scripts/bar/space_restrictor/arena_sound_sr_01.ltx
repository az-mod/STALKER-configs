[logic]
active = sr_idle@wait_rupor_1

[sr_idle@wait_rupor_1]
on_info = {+arena_start_public} sr_idle@wait_1

[sr_idle@wait_1]
on_game_timer = 10 | sr_idle@play_arena_sound_1

[sr_idle@play_arena_sound_1]
on_game_timer = 10 | sr_idle@stop_arena_sound_1 %=play_sound(new_arena_public_1)%
on_info = {-arena_start_public} sr_idle@stop_1

[sr_idle@stop_arena_sound_1]
on_signal = sound_end | sr_idle@play_arena_sound_1
on_info = {-arena_start_public} sr_idle@stop_1

[sr_idle@stop_1]
on_game_timer = 50 | sr_idle@wait_1
