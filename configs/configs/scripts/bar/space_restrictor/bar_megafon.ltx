[logic]
active = sr_idle

[sr_idle]
on_info = {-bar_player_music_info -bar_megafon_alarm =dist_to_actor_le(150)} sr_idle@wait  %=play_sound(bar_megafon)%
on_info2 = {-bar_surget_quest_complite +bar_start_quest_surget} sr_idle@surget %=play_sound_looped(bar_quest_sirena_sound)%

[sr_idle@wait]
on_game_timer = 150 | sr_idle
on_info = {+bar_player_music_info} sr_idle

[sr_idle@surget]
on_info = {+bar_surget_quest_complite} sr_idle  %=stop_sound_looped(bar_quest_sirena_sound)%

[sr_idle@nil]