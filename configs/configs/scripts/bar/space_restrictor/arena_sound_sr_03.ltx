[logic]
active = sr_idle@wait_rupor_3

[sr_idle@wait_rupor_3]
on_info = {+arena_start_public} sr_idle@wait_3

[sr_idle@wait_3]
on_game_timer = 20 | sr_idle@play_arena_sound_3

[sr_idle@play_arena_sound_3]
on_game_timer = 10 | sr_idle@stop_arena_sound_3 %=play_sound(new_arena_public_3)%
on_info = {-arena_start_public} sr_idle@stop_3

[sr_idle@stop_arena_sound_3]
on_signal = sound_end | sr_idle@play_arena_sound_3
on_info = {-arena_start_public} sr_idle@stop_3

[sr_idle@stop_3]
on_game_timer = 50 | sr_idle@wait_3
